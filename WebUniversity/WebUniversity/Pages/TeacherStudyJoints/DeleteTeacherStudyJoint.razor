@page "/deleteteacherstudyjoint/{id}"
@inject NavigationManager NavigationManager
@inject ITeacherStudyJointService TeacherStudyJointService

<h2>Confirm Delete</h2>
<p>Are you sure you want to delete this TeacherStudyJoint with Id :<b> @id</b></p>
<br />
<div class="col-md-4">
    <table class="table">
        <tr>
            <td>Id</td>
            <td>@teacherStudyJoint.Id</td>
        </tr>
        <tr>
            <td>TeacherId</td>
            <td>@teacherStudyJoint.TeacherId</td>
        </tr>
        <tr>
            <td>StudyId</td>
            <td>@teacherStudyJoint.StudyId</td>
        </tr>
        <tr>
            <td>Hours</td>
            <td>@teacherStudyJoint.Hours</td>
        </tr>
    </table>
    <div class="form-group">
        <input type="button" value="Delete" @onclick="@Delete" class="btn btn-primary" />
        <input type="button" value="Cancel" @onclick="@Cancel" class="btn" />
    </div>
</div>

@code {

    [Parameter]
    public string id { get; set; }
    TeacherStudyJoint teacherStudyJoint = new TeacherStudyJoint();

    protected override async Task OnInitializedAsync()
    {
        teacherStudyJoint = await TeacherStudyJointService.SingleTeacherStudyJoint(Convert.ToInt64(id));
    }

    protected async Task Delete()
    {
        await TeacherStudyJointService.DeleteTeacherStudyJoint(Convert.ToInt64(id));
        NavigationManager.NavigateTo("listteacherstudyjoint");
    }

    void Cancel()
    {
        NavigationManager.NavigateTo("listteachersutdyjoint");
    }
}   